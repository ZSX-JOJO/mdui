{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap --hoist",
    "bootstrap": "lerna bootstrap --hoist",
    "lint:shared": "eslint --fix packages/shared/src/**/*.ts",
    "lint:jq": "eslint --fix packages/jq/src/**/*.ts",
    "lint:mdui": "stylelint --fix --syntax less packages/mdui/src/**/*.less && eslint --fix packages/mdui/src/**/*.ts",
    "lint:themes": "stylelint --fix --syntax less packages/themes/**/*.less",
    "lint": "npm-run-all lint:*",
    "clean:shared": "rimraf packages/shared/{controllers,decorators,directives,helpers,icons,mixins} packages/shared/*.{js,d.ts,js.map}",
    "clean:jq": "rimraf packages/jq/{functions,methods,shared,static} packages/jq/*.{js,d.ts,js.map}",
    "clean:mdui": "rimraf packages/mdui/{button,checkbox,icon,link,surface} packages/mdui/*.{js,d.ts,js.map} packages/mdui/src/**/*style.ts",
    "clean:icons": "",
    "clean:themes": "rimraf packages/themes/*.css",
    "clean": "npm-run-all clean:*",
    "build:shared": "npm run lint:shared && npm run clean:shared && tsc -p packages/shared/tsconfig.json",
    "build:jq": "npm run lint:jq && npm run clean:jq && tsc -p packages/jq/tsconfig.json",
    "build:mdui": "npm run lint:mdui && npm run clean:mdui && node scripts/mdui/build_less.js && tsc -p packages/mdui/tsconfig.json && node scripts/mdui/build_js.js",
    "build:themes": "npm run lint:themes && npm run clean:themes && node scripts/themes/build.js",
    "build": "npm-run-all build:*",
    "bundle:jq": "npm run build:jq && rollup -c scripts/jq/rollup.config.js",
    "bundle:mdui": "npm run build:mdui && rollup -c scripts/mdui/rollup.config.js",
    "bundle": "npm-run-all bundle:*",
    "test:jq": "eslint --fix packages/jq/__test__/**/*.ts && vite --config scripts/jq/vite.config.js",
    "test:mdui": "",
    "test": "npm-run-all test:*",
    "dev:mdui": "npm run build:mdui && concurrently -k -r \"node scripts/mdui/dev.js\" \"tsc --watch --preserveWatchOutput -p packages/mdui/tsconfig.json\" \"vite --config scripts/mdui/vite.config.js\""
  },
  "devDependencies": {
    "@material-icons/svg": "github:material-icons/material-icons#original",
    "@open-wc/testing": "^3.0.0-next.1",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "autoprefixer": "^10.2.5",
    "clean-css": "^5.1.2",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-lit": "^1.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jquery": "^3.6.0",
    "lerna": "^4.0.0",
    "less": "^4.1.1",
    "lint-staged": "^11.0.0",
    "minify-html-literals": "^1.3.5",
    "node-watch": "^0.7.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.0",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.2.4",
    "vite": "^2.3.2",
    "web-component-analyzer": "^1.1.6"
  },
  "lint-staged": {
    "*.less": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=15",
    "npm": ">=7.4"
  }
}
