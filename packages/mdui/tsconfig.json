  {
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["src/typings", "node_modules/@types"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "es",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src/",
    "declaration": true
  },
  "include": ["**/*.ts"]
}
